@model UserGreetingWeb.Models.User
@{
    ViewData["Title"] = "Registrati";
}
<h1>Ecco la registrazione</h1>
<form method="post" asp-controller="Register" asp-action="Salva" class="d-flex flex-column col-12 col-md-6 mx-auto">
    <label asp-for="Nome">Nome</label>
    <input asp-for="Nome" />
    <label asp-for="Cognome">Cognome</label>
    <input asp-for="Cognome"/> 
    <button type="submit" class="btn btn-success my-3">Invia</button>
</form>
